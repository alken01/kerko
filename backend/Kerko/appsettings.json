{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "None"
    },
    "Console": {
      "FormatterName": "simple",
      "FormatterOptions": {
        "SingleLine": true,
        "IncludeScopes": false,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
      }
    }
  },
  "AllowedHosts": "*",
  "RateLimiting": {
    "PermitLimit": 20,
    "WindowMinutes": 1
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/kerko.db"
  },
  "CORS": {
    "AllowedOrigins": [
      "https://kerko.vercel.app",
      "http://localhost:3000",
      "https://localhost:3000"
    ]
  }
}
